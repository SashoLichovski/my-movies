@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{ 
    var disable = "";
    if (ViewBag.header != "All movies")
    {
        disable = "disabled";
    }
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - my_movies</title>
    @* <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">*@
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/lib/slick-1.8.1/slick/slick.css" />
    <link rel="stylesheet" href="~/lib/slick-1.8.1/slick/slick-theme.css" />
    <link rel="stylesheet" href="~/lib/Hover-master/Hover-master/css/hover.css" />
    <link rel="stylesheet" href="~/css/Sidebar.css" />

    <link href='https://css.gg/heart.css' rel='stylesheet'>
    <link href='https://unpkg.com/css.gg/icons/css/heart.css' rel='stylesheet'>
    <link href='https://cdn.jsdelivr.net/npm/css.gg/icons/css/heart.css' rel='stylesheet'>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-dark">
        <a class="navbar-brand text-light" asp-controller="Home" asp-action="HomePage">My Movies</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                @if (ViewBag.header == "All movies" || ViewBag.header == "Movie details")
                {
                    <li class="fas fa-bars" id="btn" onclick="ToggleSidebar()"></li>
                }
                <li class="nav-item">
                    <a class="nav-link text-light" asp-controller="Home" asp-action="HomePage">Home <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item dropdown  text-light">
                    <a class="nav-link dropdown-toggle  text-light" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        About Us
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                        <a class="dropdown-item layoutLinks" href="#">Our story</a>
                        <a class="dropdown-item layoutLinks" href="#">Contact us</a>
                    </div>
                </li>
                @if (User.Identity.IsAuthenticated)
                {
                    <li class="nav-item dropdown  text-light">
                        <a class="nav-link dropdown-toggle  text-light" href="#" id="navbarDropdown2" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Hi @User.Identity.Name !
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown2">
                            <a class="dropdown-item layoutLinks" asp-controller="User" asp-action="UserDetails">Account settings</a>
                            <a class="dropdown-item layoutLinks" asp-controller="Home" asp-action="ModifyMovies">Modify movies</a>
                            @if (User.Identity.IsAuthenticated && User.FindFirst("Role").Value == "admin" || User.Identity.IsAuthenticated && User.FindFirst("Role").Value == "sub-admin")
                            {
                                @if (User.Identity.IsAuthenticated && User.FindFirst("Role").Value == "admin")
                                {
                                    <a class="dropdown-item layoutLinks" asp-controller="User" asp-action="ManageUsers">Manage users</a>
                                }
                                <a class="dropdown-item layoutLinks" asp-controller="Home" asp-action="MoviesForApproval">Approve movies</a>
                            }
                            <a class="dropdown-item layoutLinks" asp-controller="Auth" asp-action="SignOut">Sign out</a>
                        </div>
                    </li>
                }
                else
                {
                    <li class="nav-item">
                        <a class="nav-link  text-light" asp-controller="Auth" asp-action="SignIn">Sign in</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link  text-light" asp-controller="Auth" asp-action="Register">Register</a>
                    </li>
                }
            </ul>
            <form class="form-inline my-2 my-lg-0" asp-controller="Home" asp-action="HomePage">
                <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search" name="search" @disable>
                <button class="btn btn-outline-success my-2 my-sm-0" type="submit" @disable>Search</button>
            </form>
        </div>
    </nav>
    @*Sidebar toggleer*@
    @*Sidebar toggleer*@

    <div id="layoutHeader">
        <h2>@ViewBag.header</h2>
    </div>

    <div>
        @RenderBody()
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - my_movies - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <script src="~/js/site.js"></script>
    <script src="~/lib/slick-1.8.1/slick/slick.min.js"></script>
    <script src="https://kit.fontawesome.com/a076d05399.js"></script>
</body>
</html>
